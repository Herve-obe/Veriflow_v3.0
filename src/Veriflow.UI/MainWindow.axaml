<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Veriflow.UI.ViewModels"
        xmlns:views="using:Veriflow.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="900"
        x:Class="Veriflow.UI.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Width="1600" Height="900"
        MinWidth="1280" MinHeight="720"
        Background="{DynamicResource Brush.Background.Primary}"
        Foreground="{DynamicResource Brush.Text.Primary}"
        FontFamily="{StaticResource Font.Primary}"
        FontSize="{StaticResource FontSize.Body}">
    
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    
    <!-- Keyboard Shortcuts -->
    <Window.KeyBindings>
        <!-- Navigation Shortcuts (F1-F6) -->
        <KeyBinding Gesture="F1" Command="{Binding NavigateToPageCommand}" CommandParameter="OFFLOAD" />
        <KeyBinding Gesture="F2" Command="{Binding NavigateToPageCommand}" CommandParameter="MEDIA" />
        <KeyBinding Gesture="F3" Command="{Binding NavigateToPageCommand}" CommandParameter="PLAYER" />
        <KeyBinding Gesture="F4" Command="{Binding NavigateToPageCommand}" CommandParameter="SYNC" />
        <KeyBinding Gesture="F5" Command="{Binding NavigateToPageCommand}" CommandParameter="TRANSCODE" />
        <KeyBinding Gesture="F6" Command="{Binding NavigateToPageCommand}" CommandParameter="REPORTS" />
        
        <!-- Standard Application Shortcuts -->
        <KeyBinding Gesture="Ctrl+Q" Command="{Binding ExitCommand}" />
    </Window.KeyBindings>
    
    <Grid RowDefinitions="Auto,*">
        <!-- Menu Bar -->
        <Menu Grid.Row="0" 
              Background="{DynamicResource Brush.Background.Primary}" 
              Foreground="{DynamicResource Brush.Text.Primary}">
            <MenuItem Header="File">
                <MenuItem Header="New Session" 
                         Command="{Binding NewSessionCommand}" 
                         InputGesture="Ctrl+N" />
                <MenuItem Header="Open Session..." 
                         Command="{Binding OpenSessionCommand}" 
                         InputGesture="Ctrl+O" />
                <MenuItem Header="Save Session" 
                         Command="{Binding SaveSessionCommand}" 
                         InputGesture="Ctrl+S" />
                <Separator />
                <MenuItem Header="Exit" 
                         Command="{Binding ExitCommand}" 
                         InputGesture="Ctrl+Q" />
            </MenuItem>
            
            <MenuItem Header="Edit">
                <MenuItem Header="Cut" InputGesture="Ctrl+X" IsEnabled="False" />
                <MenuItem Header="Copy" InputGesture="Ctrl+C" IsEnabled="False" />
                <MenuItem Header="Paste" InputGesture="Ctrl+V" IsEnabled="False" />
                <Separator />
                <MenuItem Header="Undo" InputGesture="Ctrl+Z" IsEnabled="False" />
                <MenuItem Header="Redo" InputGesture="Ctrl+Y" IsEnabled="False" />
            </MenuItem>
            
            <MenuItem Header="View">
                <MenuItem Header="OFFLOAD" 
                         Command="{Binding NavigateToPageCommand}" 
                         CommandParameter="OFFLOAD" 
                         InputGesture="F1" />
                <MenuItem Header="MEDIA" 
                         Command="{Binding NavigateToPageCommand}" 
                         CommandParameter="MEDIA" 
                         InputGesture="F2" />
                <MenuItem Header="PLAYER" 
                         Command="{Binding NavigateToPageCommand}" 
                         CommandParameter="PLAYER" 
                         InputGesture="F3" />
                <MenuItem Header="SYNC" 
                         Command="{Binding NavigateToPageCommand}" 
                         CommandParameter="SYNC" 
                         InputGesture="F4" />
                <MenuItem Header="TRANSCODE" 
                         Command="{Binding NavigateToPageCommand}" 
                         CommandParameter="TRANSCODE" 
                         InputGesture="F5" />
                <MenuItem Header="REPORTS" 
                         Command="{Binding NavigateToPageCommand}" 
                         CommandParameter="REPORTS" 
                         InputGesture="F6" />
                <Separator />
                <MenuItem Header="Toggle Profile" 
                         Command="{Binding ToggleProfileCommand}" 
                         InputGesture="Ctrl+Tab" />
            </MenuItem>
            
            <MenuItem Header="Help">
                <MenuItem Header="About Veriflow" 
                         Command="{Binding ShowAboutCommand}" 
                         InputGesture="F1" />
                <Separator />
                <MenuItem Header="Open Log Folder" 
                         Command="{Binding OpenLogFolderCommand}" />
            </MenuItem>
        </Menu>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="280,*">
            <!-- Left Navigation Sidebar -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource Brush.Sidebar}"
                    BorderBrush="{DynamicResource Brush.Border.Default}"
                    BorderThickness="0,0,1,0">
                <StackPanel Spacing="0">
                    <!-- App Branding -->
                    <StackPanel Orientation="Horizontal" 
                               Margin="20,24,20,32"
                               Spacing="12">
                        <!-- Logo Placeholder -->
                        <Border Width="40" Height="40"
                               Background="#30363D"
                               CornerRadius="8">
                            <TextBlock Text="V"
                                      FontSize="24"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        </Border>
                        
                        <!-- App Name -->
                        <TextBlock Text="Veriflow"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <!-- Video/Audio Profile Toggle -->
                    <Border Margin="20,0,20,24"
                           Background="#30363D"
                           CornerRadius="8"
                           Padding="4">
                        <Grid ColumnDefinitions="*,*">
                            <Button Grid.Column="0"
                                   Content="VIDEO"
                                   Height="36"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Command="{Binding ToggleProfileCommand}"
                                   CornerRadius="6"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center">
                                <Button.Styles>
                                    <Style Selector="Button">
                                        <Setter Property="Background" Value="{DynamicResource Brush.Accent.Video.Primary}" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="{DynamicResource Brush.Accent.Video.Primary}" />
                                        <Setter Property="Opacity" Value="0.9" />
                                    </Style>
                                </Button.Styles>
                            </Button>
                            
                            <Button Grid.Column="1"
                                   Content="AUDIO"
                                   Height="36"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Command="{Binding ToggleProfileCommand}"
                                   CornerRadius="6"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center">
                                <Button.Styles>
                                    <Style Selector="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="#FFFFFFAA" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#FFFFFF10" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Style>
                                </Button.Styles>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <Separator Margin="20,0" Background="#FFFFFF20" />
                    
                    <!-- Navigation Buttons -->
                    <StackPanel Spacing="4" Margin="20,24,20,0">
                        <Button Classes="Ghost"
                               ToolTip.Tip="OFFLOAD (F1)"
                               Command="{Binding NavigateToPageCommand}"
                               CommandParameter="OFFLOAD"
                               Height="48"
                               HorizontalContentAlignment="Left"
                               Padding="16,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ“¤" FontSize="18" />
                                <TextBlock Text="OFFLOAD" FontWeight="Medium" />
                            </StackPanel>
                        </Button>
                        
                        <Button Classes="Ghost"
                               ToolTip.Tip="MEDIA (F2)"
                               Command="{Binding NavigateToPageCommand}"
                               CommandParameter="MEDIA"
                               Height="48"
                               HorizontalContentAlignment="Left"
                               Padding="16,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸŽ¬" FontSize="18" />
                                <TextBlock Text="MEDIA" FontWeight="Medium" />
                            </StackPanel>
                        </Button>
                        
                        <Button Classes="Ghost"
                               ToolTip.Tip="PLAYER (F3)"
                               Command="{Binding NavigateToPageCommand}"
                               CommandParameter="PLAYER"
                               Height="48"
                               HorizontalContentAlignment="Left"
                               Padding="16,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="â–¶ï¸" FontSize="18" />
                                <TextBlock Text="PLAYER" FontWeight="Medium" />
                            </StackPanel>
                        </Button>
                        
                        <Button Classes="Ghost"
                               ToolTip.Tip="SYNC (F4)"
                               Command="{Binding NavigateToPageCommand}"
                               CommandParameter="SYNC"
                               Height="48"
                               HorizontalContentAlignment="Left"
                               Padding="16,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ”„" FontSize="18" />
                                <TextBlock Text="SYNC" FontWeight="Medium" />
                            </StackPanel>
                        </Button>
                        
                        <Button Classes="Ghost"
                               ToolTip.Tip="TRANSCODE (F5)"
                               Command="{Binding NavigateToPageCommand}"
                               CommandParameter="TRANSCODE"
                               Height="48"
                               HorizontalContentAlignment="Left"
                               Padding="16,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="âš™ï¸" FontSize="18" />
                                <TextBlock Text="TRANSCODE" FontWeight="Medium" />
                            </StackPanel>
                        </Button>
                        
                        <Button Classes="Ghost"
                               ToolTip.Tip="REPORTS (F6)"
                               Command="{Binding NavigateToPageCommand}"
                               CommandParameter="REPORTS"
                               Height="48"
                               HorizontalContentAlignment="Left"
                               Padding="16,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ“Š" FontSize="18" />
                                <TextBlock Text="REPORTS" FontWeight="Medium" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Content Area -->
            <ContentControl Grid.Column="1" 
                           Content="{Binding CurrentPageViewModel}" />
        </Grid>
    </Grid>
</Window>
