<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Veriflow.UI.ViewModels"
        xmlns:views="using:Veriflow.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="900"
        x:Class="Veriflow.UI.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Width="1600" Height="900"
        MinWidth="1280" MinHeight="720"
        Background="{DynamicResource Brush.Background.Primary}"
        Foreground="{DynamicResource Brush.Text.Primary}"
        FontFamily="{StaticResource Font.Primary}"
        FontSize="{StaticResource FontSize.Body}">
    
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Menu Bar -->
        <Menu Grid.Row="0" 
              Background="{DynamicResource Brush.Background.Primary}" 
              Foreground="{DynamicResource Brush.Text.Primary}">
            <MenuItem Header="File">
                <MenuItem Header="New Session" 
                         Command="{Binding NewSessionCommand}" 
                         InputGesture="Ctrl+N" />
                <MenuItem Header="Open Session..." 
                         Command="{Binding OpenSessionCommand}" 
                         InputGesture="Ctrl+O" />
                <MenuItem Header="Save Session" 
                         Command="{Binding SaveSessionCommand}" 
                         InputGesture="Ctrl+S" />
                <Separator />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit" />
            <MenuItem Header="View" />
            <MenuItem Header="Help" />
        </Menu>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="80,*">
            <!-- Left Navigation Bar -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource Brush.Background.Secondary}"
                    BorderBrush="{DynamicResource Brush.Border.Default}"
                    BorderThickness="0,0,1,0">
                <StackPanel Spacing="{StaticResource Spacing.Small}" Margin="{StaticResource Spacing.Small}">
                    <!-- Profile Toggle Buttons -->
                    <StackPanel Spacing="{StaticResource Spacing.Micro}">
                        <Button Content="VIDEO" 
                                Width="64" Height="26"
                                FontSize="{StaticResource FontSize.Caption}"
                                FontWeight="{StaticResource FontWeight.SemiBold}"
                                Command="{Binding ToggleProfileCommand}">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="{DynamicResource Brush.Accent.Video.Primary}" />
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </Button.Styles>
                        </Button>
                        <Button Content="AUDIO" 
                                Width="64" Height="26"
                                FontSize="{StaticResource FontSize.Caption}"
                                FontWeight="{StaticResource FontWeight.SemiBold}"
                                Command="{Binding ToggleProfileCommand}">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="{DynamicResource Brush.Accent.Audio.Primary}" />
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                    
                    <Separator Margin="0,16,0,0" />
                    
                    <!-- Navigation Buttons -->
                    <Button Content="F1" 
                            Classes="Ghost"
                            ToolTip.Tip="OFFLOAD"
                            Command="{Binding NavigateToPageCommand}"
                            CommandParameter="OFFLOAD" />
                    <Button Content="F2" 
                            Classes="Ghost"
                            ToolTip.Tip="MEDIA"
                            Command="{Binding NavigateToPageCommand}"
                            CommandParameter="MEDIA" />
                    <Button Content="F3" 
                            Classes="Ghost"
                            ToolTip.Tip="PLAYER"
                            Command="{Binding NavigateToPageCommand}"
                            CommandParameter="PLAYER" />
                    <Button Content="F4" 
                            Classes="Ghost"
                            ToolTip.Tip="SYNC"
                            Command="{Binding NavigateToPageCommand}"
                            CommandParameter="SYNC" />
                    <Button Content="F5" 
                            Classes="Ghost"
                            ToolTip.Tip="TRANSCODE"
                            Command="{Binding NavigateToPageCommand}"
                            CommandParameter="TRANSCODE" />
                    <Button Content="F6" 
                            Classes="Ghost"
                            ToolTip.Tip="REPORTS"
                            Command="{Binding NavigateToPageCommand}"
                            CommandParameter="REPORTS" />
                </StackPanel>
            </Border>
            
            <!-- Content Area -->
            <ContentControl Grid.Column="1" 
                           Content="{Binding CurrentPageViewModel}" />
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource Brush.Background.Secondary}"
                BorderBrush="{DynamicResource Brush.Border.Default}"
                BorderThickness="0,1,0,0"
                Padding="{StaticResource Spacing.Small}">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}"
                          Foreground="{DynamicResource Brush.Text.Secondary}"
                          FontSize="{StaticResource FontSize.Small}" />
                <TextBlock Grid.Column="1" 
                          Text="{Binding CurrentProfile}"
                          Foreground="{DynamicResource Brush.Accent.Primary}"
                          FontSize="{StaticResource FontSize.Small}"
                          FontWeight="{StaticResource FontWeight.SemiBold}" />
            </Grid>
        </Border>
    </Grid>
</Window>
