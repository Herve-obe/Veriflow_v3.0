<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Veriflow.UI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1520" d:DesignHeight="820"
             x:Class="Veriflow.UI.Views.PlayerView"
             x:DataType="vm:PlayerViewModel">
    
    <Design.DataContext>
        <vm:PlayerViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="24">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="PLAYER" 
                      FontSize="{StaticResource FontSize.H1}"
                      FontWeight="{StaticResource FontWeight.Bold}"
                      Foreground="{DynamicResource Brush.Text.Primary}" />
            <TextBlock Text="Professional audio/video playback with metadata" 
                      FontSize="{StaticResource FontSize.Body}"
                      Foreground="{DynamicResource Brush.Text.Secondary}" />
        </StackPanel>
        
        <!-- Playback Area -->
        <Border Grid.Row="1"
               Background="{DynamicResource Brush.Background.Secondary}"
               BorderBrush="{DynamicResource Brush.Border.Default}"
               BorderThickness="1"
               CornerRadius="{StaticResource CornerRadius.Medium}"
               Margin="0,0,0,16">
            <Grid RowDefinitions="*,Auto">
                <!-- Video/Waveform Display -->
                <Border Grid.Row="0" 
                       Background="#000000"
                       Margin="16">
                    <TextBlock Text="ðŸŽ¬ Video Player / Waveform Display"
                              FontSize="24"
                              Foreground="#666666"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                </Border>
                
                <!-- Timeline -->
                <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Margin="16,0,16,16">
                    <TextBlock Grid.Column="0" 
                              Text="{Binding Timecode}"
                              FontFamily="{StaticResource Font.Monospace}"
                              FontSize="{StaticResource FontSize.Body}"
                              Foreground="{DynamicResource Brush.Text.Primary}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0" />
                    <Slider Grid.Column="1"
                           Value="{Binding Position}"
                           Maximum="{Binding Duration}"
                           VerticalAlignment="Center" />
                    <TextBlock Grid.Column="2" 
                              Text="{Binding Duration, StringFormat='{}{0:F2}s'}"
                              FontFamily="{StaticResource Font.Monospace}"
                              FontSize="{StaticResource FontSize.Body}"
                              Foreground="{DynamicResource Brush.Text.Secondary}"
                              VerticalAlignment="Center"
                              Margin="16,0,0,0" />
                </Grid>
            </Grid>
        </Border>
        
        <!-- Transport Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,0,0,16">
            <Button Content="â®" 
                   Classes="Icon"
                   Width="40" Height="40"
                   FontSize="18"
                   ToolTip.Tip="Previous" />
            <Button Content="âª" 
                   Classes="Icon"
                   Width="40" Height="40"
                   FontSize="18"
                   ToolTip.Tip="Rewind" />
            <Button Content="â–¶"
                   Classes="Primary"
                   Width="48" Height="48"
                   FontSize="20"
                   Command="{Binding PlayCommand}" />
            <Button Content="â¸" 
                   Classes="Icon"
                   Width="40" Height="40"
                   FontSize="18"
                   Command="{Binding PauseCommand}"
                   ToolTip.Tip="Pause" />
            <Button Content="â¹" 
                   Classes="Icon"
                   Width="40" Height="40"
                   FontSize="18"
                   Command="{Binding StopCommand}"
                   ToolTip.Tip="Stop" />
            <Button Content="â©" 
                   Classes="Icon"
                   Width="40" Height="40"
                   FontSize="18"
                   ToolTip.Tip="Forward" />
            <Button Content="â­" 
                   Classes="Icon"
                   Width="40" Height="40"
                   FontSize="18"
                   ToolTip.Tip="Next" />
        </StackPanel>
        
        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="16">
            <Button Content="Open File" 
                   Classes="Primary"
                   Command="{Binding OpenFileCommand}" />
            <Button Content="Export Frame" 
                   Classes="Secondary" />
            <Button Content="Add to Queue" 
                   Classes="Secondary" />
        </StackPanel>
    </Grid>
</UserControl>
